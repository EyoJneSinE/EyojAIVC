<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EyojAIVoiceChanger" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">?colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.EyojAIVoiceChanger" parent="Base.Theme.EyojAIVoiceChanger">
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>

        <!-- Optional: set the status bar light and content dark. -->
        <item name="android:windowLightStatusBar">
            true
        </item>
    </style>

    <style name="privacy">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#1E1F23</item>
    </style>

</resources>